<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@drawable/user_login_bg"
    tools:context="com.morening.october_userlogin.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.morening.october_userlogin.view.SimpleEditView
            android:id="@+id/id_user_login_simple_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:simple_edit_edit_hint="User Name"
            app:simple_edit_title_icon="@drawable/ic_simple_edittext_user_name"/>

        <com.morening.october_userlogin.view.SimpleEditView
            android:id="@+id/id_user_login_simple_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:simple_edit_edit_hint="Password"
            app:simple_edit_is_password="true"
            app:simple_edit_title_icon="@drawable/ic_simple_edittext_password"/>

        <com.morening.october_userlogin.view.AnimationImageButton
            android:id="@+id/id_user_login_animation_button_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            android:elevation="1dp"/>

        <LinearLayout
            android:id="@+id/id_user_login_sign_up_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have any account?"
                android:textColor="@android:color/white"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
